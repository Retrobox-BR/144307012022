<theme>
<formatVersion>4</formatVersion>


<view name="system">

	  <image name="overlayvideo" extra="true" ifSubset="advertvid:yes">
		<path>./../assets/coinops/$system.png</path> 
		<pos>0 -0.3</pos>
		<size>1.55 1.55</size>
		<origin>0 0</origin>
		<delay>1.2</delay>
		<zIndex>52</zIndex>
		 <storyboard>
		       <animation property="opacity" from="0" to="0" duration="1" mode="linear"/>
               <animation property="opacity" from="0" to="1" begin="2450" duration="320" mode="easeOut"/>
        </storyboard> 
      </image>

	<video name="md_video" extra="true" ifSubset="advertvid:yes">
		<path>./../assets/videos/$system.mp4</path> 
         <pos>0.164 0.16</pos>
         <size>0.62 0.75</size>
		<origin>0 0</origin>
		<delay>2.2</delay>
		<showSnapshotNoVideo>false</showSnapshotNoVideo>
		<showSnapshotDelay>false</showSnapshotDelay>
		<zIndex>50</zIndex>
      </video>

	  <image name="overlay" extra="true" ifSubset="advertvid:yes">
            <storyboard>
               <animation property="opacity" from="1" to="0.7" begin="2500" duration="850" mode="easeOut"  />
            </storyboard> 
      </image>


	  <image name="sublogo, console, controller" extra="true" ifSubset="advertvid:yes">
            <storyboard>
               <animation property="opacity" from="1" to="0" begin="2500" duration="850" mode="easeOut"  />
            </storyboard> 
      </image>
	  

	  <text name="info1" extra="true" ifSubset="advertvid:yes">
            <storyboard>
               <animation property="opacity" from="1" to="0" begin="2500" duration="850" mode="easeOut"  />
            </storyboard> 
      </text>

</view>


</theme>